<style>

     #map {
       height: 400px;
       width: 400px;
     }
   </style>

   <div id="map"></div>
   <script>

// This example creates a simple polygon representing the Bermuda Triangle.

function initMap() {
 var map = new google.maps.Map(document.getElementById('map'), {
   zoom: 10,
   center: {lat: <%=@setting.originlat%>, lng: <%=@setting.originlon%>},
   mapTypeId: google.maps.MapTypeId.TERRAIN
 });

 // Define the LatLng coordinates for the polygon's path.
 var triangleCoords = [
   {lat: <%=@setting.originlat%>, lng: <%=@setting.originlon%>},
   {lat: <%=@setting.originlat%>, lng: <%=@setting.originlon%>},
   {lat: <%=@setting.rightlat%>, lng: <%=@setting.rightlon%>},
     {lat: <%=@setting.leftlat%>, lng: <%=@setting.leftlon%>}
 ];

 // Construct the polygon.
 var bermudaTriangle = new google.maps.Polygon({
   paths: triangleCoords,
   strokeColor: '#FF0000',
   strokeOpacity: 0.8,
   strokeWeight: 2,
   fillColor: '#FF0000',
   fillOpacity: 0.35
 });
 bermudaTriangle.setMap(map);
}

   </script>
   <script async defer
       src="https://maps.googleapis.com/maps/api/js?key=<%=ENV["GOOGLEMAPSAPI"]%>&signed_in=true&callback=initMap"></script>





